{
    "name": "initiation-sass",
    "version": "1.0.0",
    "description": "Projet Int√©gration avec SASS",
    "type": "module",
    "scripts": {
        "sass-watch": "sass --embed-sources --watch --poll ./src/sass/index.scss:./public/assets/bundle.css",
        "rollup-watch": "rollup -c -w",
        "prefix": "postcss ./public/assets/bundle.css --replace --no-map",
        "prefix-watch": "onchange ./public/assets/*.css -- npm run prefix",
        "watch": "run-p -n sass-watch rollup-watch prefix-watch",
        "build-js": "rollup -c"
    },
    "author": "Aymeric Anger",
    "private": true,
    "devDependencies": {
        "@rollup/plugin-babel": "^6.0.3",
        "@rollup/plugin-commonjs": "^24.0.1",
        "@rollup/plugin-node-resolve": "^15.0.1",
        "animate-scss": "^3.2.1",
        "autoprefixer": "^10.4.14",
        "gerillass": "^1.3.1",
        "npm-run-all": "^4.1.5",
        "onchange": "^7.1.0",
        "postcss-cli": "^10.1.0",
        "postcss-combine-media-query": "^1.0.1",
        "postcss-remove-prefixes": "^1.2.0",
        "rollup": "^3.18.0",
        "rollup-plugin-postcss": "^4.0.2",
        "sass": "^1.59.2"
    },
    "dependencies": {
        "lorem-ipsum": "^2.0.8"
    }
}